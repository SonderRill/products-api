{
    "name": "products-api",
    "version": "0.0.1",
    "description": "",
    "author": "Sonder",
    "license": "UNLICENSED",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch --exec \"node -r source-map-support/register\"",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "lint:ts": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix --plugin tsc --rule \"tsc/config: [2, {configFile: \"./tsconfig.json\"}]\"",
        "release": "standard-version --commit-all",
        "first-release": "standard-version --commit-all --first-release",
        "typeorm:cli": "node --require ts-node/register ./node_modules/typeorm/cli.js --config src/config/orm-migration.config.ts",
        "migration:generate": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config src/config/typeorm.config.ts migration:generate -n",
        "migration:run": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config src/config/typeorm.config.ts migration:run",
        "migration:revert": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config src/config/typeorm.config.ts migration:revert"
    },
    "dependencies": {
        "@nestjs/common": "^8.2.4",
        "@nestjs/config": "^1.1.3",
        "@nestjs/core": "^8.2.4",
        "@nestjs/jwt": "^8.0.0",
        "@nestjs/passport": "^8.1.0",
        "@nestjs/platform-express": "^7.6.18",
        "@nestjs/swagger": "^5.1.5",
        "@nestjs/typeorm": "^7.1.5",
        "@nestjsx/crud": "^5.0.0-alpha.3",
        "@nestjsx/crud-typeorm": "^5.0.0-alpha.3",
        "bcryptjs": "^2.4.3",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.13.2",
        "passport": "^0.5.2",
        "passport-jwt": "^4.0.0",
        "passport-local": "^1.0.0",
        "pg": "^8.6.0",
        "rimraf": "^3.0.2",
        "rxjs": "^7.5.2",
        "swagger-ui-express": "^4.3.0",
        "typeorm": "^0.2.41"
    },
    "devDependencies": {
        "@commitlint/cli": "^11.0.0",
        "@commitlint/config-conventional": "^11.0.0",
        "@graphql-inspector/cli": "^2.1.0",
        "@nestjs/cli": "^7.0.0",
        "@nestjs/schematics": "^7.0.0",
        "@nestjs/testing": "^7.0.0",
        "@types/bcryptjs": "^2.4.2",
        "@types/express": "^4.17.3",
        "@types/jest": "25.2.3",
        "@types/node": "^13.9.1",
        "@types/passport-jwt": "^3.0.6",
        "@types/supertest": "^2.0.8",
        "@typescript-eslint/eslint-plugin": "3.0.2",
        "@typescript-eslint/parser": "3.0.2",
        "conventional-changelog-cli": "^2.0.34",
        "eslint": "^7.2.0",
        "eslint-config-prettier": "^6.10.0",
        "eslint-plugin-import": "^2.20.1",
        "eslint-plugin-no-null": "^1.0.2",
        "eslint-plugin-tsc": "^1.2.0",
        "husky": "^4.2.5",
        "jest": "26.0.1",
        "prettier": "^2.2.1",
        "pretty-quick": "^3.1.0",
        "source-map-support": "^0.5.19",
        "standard-version": "^9.0.0",
        "supertest": "^4.0.2",
        "ts-jest": "26.1.0",
        "ts-loader": "^6.2.1",
        "ts-node": "^8.6.2",
        "tsconfig-paths": "^3.9.0",
        "typescript": "^4.3.4"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".spec.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "coverageDirectory": "../coverage",
        "testEnvironment": "node",
        "moduleNameMapper": {
            "^src/(.+)$": "<rootDir>/$1"
        }
    }
}